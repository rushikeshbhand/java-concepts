class ReverseNumber {

    public static void main(String[] args) {
        int number = 398;
        int reversedNumber = 0;

        while (number > 0) {
            int digit = number % 10;
            reversedNumber = reversedNumber * 10 + digit;
            number = number / 10;
        }

        System.out.println("The reverse of the number is " + reversedNumber);
    }
}
